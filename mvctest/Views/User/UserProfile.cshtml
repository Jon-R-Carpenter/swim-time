@model  TheSwimTimeSite.ObjectModels.User



@{
    ViewBag.Title = Model.FirstName + " " + Model.LastName;
}
<!DOCTYPE html>
<html>
<head>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />;
</head>
<body>
    <div id="userprofileBackground" >
        <br />
        <fieldset style="padding-left: 30px;">
            <legend>User Profile</legend>


            <table style="float: left;">
                <tr>
                    <th align="left">First Name</th>
                    <td>@Html.DisplayFor(model =>model.FirstName)</td>
                </tr>
                <tr>
                    <td><br /></td>
                </tr>
                <tr>
                    <th align="left">Last Name</th>
                    <td>@Html.DisplayFor(model => model.LastName)</td>
                </tr>
                <tr>
                    <td><br /></td>
                </tr>
                <tr>
                    <th align="left">Student ID</th>
                    <td>
                      @if(Model.StudentID.Length > 1)
                      {
                          <div>Student ID is Stored</div>
                      }
                      else
                      {
                          <div>@String.Empty</div>
                      }
                    </td>
                </tr>
                <tr>
                    <td><br /></td>
                </tr>
                <tr>
                    <th align="left">Card Scan</th>
                    <td>
                       @if (Model.CardScan.Length > 1)
                       {
                        <div>Card Scan Is Stored</div>
                       }
                       else
                       {
                        <div>@String.Empty</div>
                       }
                    </td>
                </tr>
                <tr>
                    <td><br /></td>
                </tr>
                <tr>
                    <th align="left">Phone Number</th>
                    <td>@Html.DisplayFor(model => model.Phone)</td>
                </tr>
                <tr>
                    <td><br /></td>
                </tr>
                <tr>
                    <th align="left">Email</th>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <td><br /></td>
                </tr>
                <tr>
                    <th align="left">Class In School</th>
                    <td>@Html.DisplayFor(model => model.ClassInSchool)</td>
                </tr>
               
                <tr>
                    <td><br /></td>
                </tr>
                <tr>
                    <th align="left">User Type</th>
                    <td>@Html.DisplayFor(model => model.UserType)</td>
                </tr>
            </table>

            <table style="width:50%; margin-right:5%; height:50%;" align="right">
                <tr>
                    <th>Comments</th>
                </tr>
                <tr>
                    <td style="height:100%;">@Html.DisplayTextFor(model => model.Comments)</td>
                </tr>
            </table>

            <div class="userProfileButtons">
                <center>
                    <table>
                        <tr>
                            <td>@Html.ActionLink("Edit","Edit",new {id=Model.UserID },new {@class="button" })</td>
                            
                            <td>@Html.ActionLink("Check-In","CheckIn",new {id=Model.UserID},new {@class="button" })</td>
                        </tr>
                    </table>
                </center>
            </div>



        </fieldset>
        <br />
        @Html.ActionLink("Home","Welcomee","Home",null,new {@class="button"})
    </div>
</body>
</html>


