@model IEnumerable <TheSwimTimeSite.ObjectModels.User>

@{
    ViewBag.Title = "MultipleUsers";
}
<!DOCTYPE html>
<html>
<head>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />;
    <script src="https://code.jquery.com/jquery-1.6.2.js" type="text/javascript"></script>
    <script type="text/javascript">
    $(document).ready(function () {
        $("#selectableTable tr").click(function () {
            var href = $(this).find("a").attr("href");
            if (href) {
                window.location = href;
            }
        });
    });

    </script>
</head>
<body>
    <div id="multipleUsers">
        <br />
        <br />
        <fieldset>
            <legend>Users with the same or similar last names:</legend>
            <center>
                <table id="selectableTable">
                    <tr>
                        <th>&nbsp;</th>
                        <th>
                            First Name
                        </th>
                        <th>
                           Last Name
                        </th>
                        <th align="left">
                            Phone
                        </th>
                        <th align="left">
                            Email
                        </th>
                        <th align="left">
                            Course
                        </th>
                        <th align="left">
                            User Type
                        </th>
                    </tr>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td style="border-right: hidden;">
                                <a href="@Url.Content("~/User/Verify/") @item.UserID"></a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassInSchool)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserType)
                            </td>
                        </tr>
                        
                    }

                </table>
            </center>
        </fieldset>
        <br />
        <div style="padding-bottom:12px;margin-right:850px;">
            @Html.ActionLink("Home", "Welcomee", "Home", null, new {@class="button" })
        </div>
    </div>
</body>
</html>


